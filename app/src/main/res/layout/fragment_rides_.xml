<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".rides_Fragment"
    android:background="#34F0EAD6"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#34F0EAD6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_condensed_light"
            android:gravity="center"
            android:textColor="@color/main"
            android:text="Orders"
            android:textSize="30sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pending"
            android:gravity="center"
            android:textColor="@color/main"
            android:fontFamily="@font/roboto_condensed_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_light"
            android:text="Order Id #62E52R"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderid"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_condensed_light"
            android:text="john depp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/roboto_condensed_light"
            android:text="pending"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/order_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pending"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_condensed_light_italic"
            android:text="order details"
            android:textAllCaps="false"
            android:textColor="@color/main"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>